{
  "name": "products-managment-api",
  "version": "1.0.0",
  "description": "- SALT=[соль для шифрования пароля, число]\r - SECRET=[секретный ключ для шифрования jwt, строка]\r - DATABASE_URL=[url для подключения к PostgreSQL, строка]: Пример - postgresql://[user[:password]@][netloc][:port][/dbname]",
  "main": "index.js",
  "scripts": {
    "ci": "npm ci && npm run prisma:generate && npm run build",
    "build": "tsc",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:test-seed": "node ./dist/prisma/seed.js",
    "start": "node ./dist/src/main.js",
    "dev": "nodemon",
    "dev:inspect": "nodemon -e ts,json --exec node --inspect=localhost:9222 -r ts-node/register main.ts",
    "lint": "eslint src/**",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.ts --coverage",
    "lint:fix": "eslint src/** --fix",
    "db:create": "docker compose up -d"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Deadmanch"
  },
  "author": "Dan Stepanov",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "inversify": "^6.0.2",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.2.1",
    "telegraf-session-local": "^2.1.1",
    "tslog": "^4.9.2",
    "telegraf": "^4.12.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.28",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prisma": "^5.11.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "directories": {
    "test": "tests"
  }
}
